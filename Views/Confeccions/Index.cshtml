@model IEnumerable<Confecciones.Models.Confeccion>

@{
    ViewData["Title"] = "Index";
}

<h1>Confecciones</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medidas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodEstiloNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medidas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodEstiloNavigation.CodEstilo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CodConfeccion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CodConfeccion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CodConfeccion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
